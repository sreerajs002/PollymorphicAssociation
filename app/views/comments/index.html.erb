<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>
<div class='table-responsive'>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Author Id</th>
      <th>Author Name</th>
      <th>Authortype</th>
      <th>Article name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.author_id %></td>
        <td><%= comment.author_name %></td>
        <td><%= comment.author_type %></td>
        <td><%= comment.article_name %></td>
        <td>
        <%= link_to comment , class:'btn btn-success btn-xs' do%><i class="glyphicon glyphicon-eye-open"></i>
                    <%end%>
        <%= link_to edit_comment_path(comment), class:'btn btn-warning btn-xs' do%>
                    <i class="glyphicon glyphicon-pencil"></i><% end %> 
        <%= link_to  comment, method: :delete, data:{ confirm: 'Are you sure?' },class:'btn btn-danger btn-xs' do%>            <i class="glyphicon glyphicon-trash"></i><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

