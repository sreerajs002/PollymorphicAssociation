<p id="notice"><%= notice %></p>

<h1>Listing Teachers</h1>
<div class='table-responsive'>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.email %></td>
        <td>
        <%= link_to teacher , class:'btn btn-success btn-xs' do%><i class="glyphicon glyphicon-eye-open"></i>
                    <%end%>
        <%= link_to edit_teacher_path(teacher) , class:'btn btn-warning btn-xs' do%>
                    <i class="glyphicon glyphicon-pencil"></i><% end %> 
        <%= link_to  teacher, method: :delete, data:{ confirm: 'Are you sure?' },class:'btn btn-danger btn-xs' do%>            <i class="glyphicon glyphicon-trash"></i><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_teacher_path ,class:'btn btn-block btn-info'%>
 