<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>
<div class='table-responsive'>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td>
        <%= link_to student , class:'btn btn-success btn-xs' do%><i class="glyphicon glyphicon-eye-open"></i>
                    <%end%>
        <%= link_to edit_student_path(student), class:'btn btn-warning btn-xs' do%>
                    <i class="glyphicon glyphicon-pencil"></i><% end %> 
        <%= link_to  student, method: :delete, data:{ confirm: 'Are you sure?' },class:'btn btn-danger btn-xs' do%>            <i class="glyphicon glyphicon-trash"></i><% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
 <%= link_to 'New Student', new_student_path ,class:'btn btn-block btn-info'%>
